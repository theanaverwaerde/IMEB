@using IMEB.Common
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <div>
            <span>Welcome @context.User.Identity?.Name from @context.User.GetOrganizationName()! </span>
            <form method="post" action="authentication/logout" style="display:inline;">
                <AntiforgeryToken />
                <button type="submit" class="btn btn-link">Logout</button>
            </form>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="authentication/login" class="btn btn-primary">Login</a>
    </NotAuthorized>
</AuthorizeView>